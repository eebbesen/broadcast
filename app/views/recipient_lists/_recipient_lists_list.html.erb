<div>
  <div id="header-row" class="grid grid-cols-6 bg-slate-300 rounded-t p-4">
    <% %w(Name User).each do |h| %>
      <div class="header-item font-bold <%= 'col-span-4' if h == 'Content' %>">
        <%= h %>
      </div>
    <% end %>
  </div>
  <div id="data">
    <% recipient_lists.each_with_index do |rl, i|
      st = i.odd? ? ' bg-slate-100 ' : ''
      st += i == recipient_lists.size ? ' rounded-b ' : ''
    %>
      <%= link_to recipient_list_path(rl.id) do %>
        <div id="<%= dom_id rl %>" class="grid grid-cols-6 border border-slate-300 p-4 <%= st %>">
          <div class="col-span-4">
            <%= rl.name %>
          </div>
          div class="col-span-4">
            <%= rl.user.id %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
